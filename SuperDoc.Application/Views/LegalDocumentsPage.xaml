<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SuperDoc.Application.Views.LegalDocumentsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Shell.TitleView>
        <Label Text="Oversigt" FontSize="Large" VerticalTextAlignment="Center" Style="{StaticResource PageHeader}"/>
    </Shell.TitleView>

    <VerticalStackLayout Spacing="8" HorizontalOptions="Center" WidthRequest="275" Margin="0, 75, 0, 0">
        <Label Text="&#xF3AF;" TextColor="{StaticResource Primary}" FontSize="64" FontFamily="FluentSystemIconsRegular" HorizontalOptions="Center"/>
        <Label Text="Vi kunne ikke finde nogen dokumenter der mangler din underskrift." TextColor="{StaticResource Gray600}" FontSize="Small" HorizontalTextAlignment="Center"/>
    </VerticalStackLayout>
</ContentPage>