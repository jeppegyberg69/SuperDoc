<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    x:Name="ControlContext"
    x:Class="SuperDoc.Application.Controls.LoadingIndicator"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <VerticalStackLayout Spacing="10" HorizontalOptions="Center" VerticalOptions="Start" Margin="0, 75, 0, 0">
        <ActivityIndicator IsRunning="True" WidthRequest="64" HeightRequest="64"/>
        <Label Text="{Binding Text, Mode=OneWay, Source={x:Reference ControlContext}}"/>
    </VerticalStackLayout>
</ContentView>
